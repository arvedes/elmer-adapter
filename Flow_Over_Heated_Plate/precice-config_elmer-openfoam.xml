      <exchange data="temperature flux 2" mesh="solid-mesh" from="Solid" to="Fluid" />
      <relative-convergence-measure limit="1.0e-5" data="temperature" mesh="Fluid-Mesh" />
      <acceleration:aitken>
        <data mesh="solid-mesh" name="temperature flux 2" />
        <initial-relaxation value="0.5" />
      </acceleration:aitken>
    </coupling-scheme:serial-implicit> -->
  </solver-interface>
</precice-configuration>
